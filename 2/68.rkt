(define (encode message tree)
  (if (null? message)
      '()
      (append (encode-symbol (car message) tree)
              (encode (cdr message) tree))))

(define (encode-symbol symbol tree)
  (define (encode-symbol-aux symbol tree bag)
    ;; (display symbol) (display " ") (display tree) (display " ") (display bag) (newline)
    (cond ((null? tree) bag)
          ((leaf? tree) bag)
          (else (let ((lft (left-branch tree))
                      (rgt (right-branch tree)))
                  (if (and (leaf? lft) (eq? symbol (symbol-leaf lft)))
                      (cons 0 bag)
                      (encode-symbol-aux symbol rgt (cons 1 bag)))))))

  (reverse (encode-symbol-aux symbol tree '())))

